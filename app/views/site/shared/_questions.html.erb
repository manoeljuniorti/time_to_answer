<% @questions.each do |question| %>
  <table class="table">
    <thead>
      <tr>
        <th scope="col"><%= question.description %></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          <% question.answers.each do |answer| %>
            <li><%= answer.description %></li>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>
<% end %>%>