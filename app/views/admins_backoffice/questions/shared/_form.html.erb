<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header"><%= action_message %></h1>
  </div>
</div>

<div class="row">
  <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
    <symbol id="exclamation-triangle-fill" fill="currentColor" viewBox="0 0 16 16">
      <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
    </symbol>
  </svg>
    
    <% if @question.errors.any? %>
        <div class="alert alert-danger d-flex align-items-center alert-dismissible" role="alert">
          <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill"/></svg>
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
          <div>         
            <% @question.errors.full_messages.each do |message| %>
              <%= message %>
            <% end %>          
          </div>
        </div>
    <% end %>

  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-6">
            <%= form_with(model: [ :admins_backoffice, @question ], local: true, data: { turbo: false }) do |form| %>

              <div class="form-group">
                <%= form.label :description %>
                <%= form.text_area :description, class:"form-control", placeholder:"Descrição da pergunta"  %>
              </div>

              <div class="form-group">
                <%= form.label :subject_id %>
                <%= form.collection_select(:subject_id, @subjects, :id, :description, {}, { class:"form-control" }) %>
              </div>

              <div id='answers'>
                <%= form.fields_for :answers do |answer| %>
                  <%= render partial: "answer_fields", locals: { f: answer } %>
                <% end %>

                <%= link_to_add_association '[Adicionar Resposta]', form, :answers %>
              </div>


              <button type="submit" class="btn btn-success btn-icon-split">
                <span class="icon text-white-50">
                    <i class="fas fa-check"></i>
                </span>
                <span class="text">Salvar</span>
              </button>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>