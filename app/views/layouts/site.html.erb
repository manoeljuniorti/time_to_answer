<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>TimeToAnswer</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>

    <link href="/templates/startbootstrap-sb-admin-2/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">
    <link rel="canonical" href="https://getbootstrap.com/docs/4.6/examples/navbar-static/">
   
    <!-- Bootstrap core CSS -->
    <link href="/templates/bootstrap-4.6.1-examples/assets/dist/css/bootstrap.min.css" rel="stylesheet">

      <style>
        .bd-placeholder-img {
          font-size: 1.125rem;
          text-anchor: middle;
          -webkit-user-select: none;
          -moz-user-select: none;
          -ms-user-select: none;
          user-select: none;
        }

        @media (min-width: 768px) {
          .bd-placeholder-img-lg {
            font-size: 3.5rem;
          }
        }

        .espacamento{
          padding-right: 10px;
        }
      </style>
   
    <!-- Custom styles for this template -->
    <link href="/templates/bootstrap-4.6.1-examples/navbar-static/navbar-top.css" rel="stylesheet">
  </head>
  <body>
    
    <nav class="navbar navbar-expand-md navbar-dark bg-dark mb-4">
      <div class="container-fluid">
        <div class="navbar-header">
          <%= link_to 'Time To Answer', root_path, class:"navbar-brand" %>
        </div>
        <div class="collapse navbar-collapse" id="navbarCollapse">
          <%= form_with(url: site_search_path, local: true, method: :get, class:"form-inline my-2 my-lg-0") do |form| %>
            <%= form.text_field :term, class:"form-control mr-sm-2", placeholder:"Digite algo..." %>
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Pesquisar</button>
          <% end %>
          <ul class="navbar-nav mr-auto"></ul>
          <ul class="navbar-nav">
            <% unless user_signed_in? %>
              <li class="nav-item espacamento"> <%= link_to 'Entrar', new_user_session_path %></li>
              <li class="nav-item"> <%= link_to 'Cadastrar-se', new_user_registration_path %></li>
            <% else %>
              <li class="nav-item dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= current_user.email %> <span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li>
                    <%= link_to users_backoffice_welcome_index_path, class:"dropdown-item" do %>
                        <i class="fa fa-user"></i> Perfil
                    <% end %>
                  </li>

                  <li>
                    <%= link_to destroy_user_session_path, class:"dropdown-item" do %>
                        <i class="fa fa-sign-out"></i> Sair
                    <% end %>
                  </li>
                </ul>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

<main role="main" class="container">
  <div class="jumbotron">
    <% unless params[:term] %>
      <h3>Ãšltimas perguntas cadastradas...</h3>
    <% else %>
      <h3><%= "Resultados para o termo \"#{params[:term]}\"..." %></h3>
    <% end %>
  </div>
  <%= yield %>
</main>
  
  <%= javascript_importmap_tags %>    

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
      <script>window.jQuery || document.write('<script src="/templates/bootstrap-4.6.1-examples/assets/js/vendor/jquery.slim.min.js"><\/script>')</script><script src="/templates/bootstrap-4.6.1-examples/assets/dist/js/bootstrap.bundle.min.js"></script>
  
      <% if notice %>
      <%= javascript_tag  do %>
        $.bootstrapGrowl("<%= notice %>", {
        type: 'success', // (null, 'info', 'danger', 'success')
        align: 'right', // ('left', 'right', or 'center')
        allow_dismiss: true, // If true then will display a cross to close the popup.
        stackup_spacing: 10 // spacing between consecutively stacked growls.
        });
      <% end %>
    <% end %>

  </body>
</html>