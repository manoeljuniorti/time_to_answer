<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Lista de Perguntas</h1>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th><%= translate_attribute(@questions, :description) %></th>
        <th><%= translate_attribute(@questions, :subject) %></th>
        <th>
          <%= link_to new_admins_backoffice_question_path do %>
            <button type="button" class="btn btn-success">
              <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-file-earmark-plus-fill" viewBox="0 0 16 16">
                <path d="M9.293 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V4.707A1 1 0 0 0 13.707 4L10 .293A1 1 0 0 0 9.293 0zM9.5 3.5v-2l3 3h-2a1 1 0 0 1-1-1zM8.5 7v1.5H10a.5.5 0 0 1 0 1H8.5V11a.5.5 0 0 1-1 0V9.5H6a.5.5 0 0 1 0-1h1.5V7a.5.5 0 0 1 1 0z"/>
              </svg>
            </button>
          <% end %>

 


        </th>
      </tr>
    </thead>
    <tbody>
      <% @questions.each do |question| %>
        <tr>
          <td><%= question.id %></td>
          <td><%= question.description %></td>
          <td><%= question.subject.description %></td>
          <td style="width: 110px">         

            <%= link_to edit_admins_backoffice_question_path(question), class:"btn btn-primary btn-circle" do %>
              <i class="fa fa-edit"></i>
            <% end %>

            <%= link_to admins_backoffice_question_path(question), method: :delete, class:"btn btn-danger btn-circle", data: { confirm: "Deseja exluir essa pergunta?" } do %>
              <i class="fa fa-minus"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="text-center">
    <%= paginate @questions %>
  </div>
</div>

