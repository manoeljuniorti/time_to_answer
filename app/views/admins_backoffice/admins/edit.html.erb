<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Editando</h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-6">
            <%= form_with(model: [ :admins_backoffice, @admin ], local: true) do |form| %>

              <div class="form-group">
                <%= form.label :email %>
                <%= form.text_field :email, class:"form-control", placeholder:"Email do Admin"  %>
              </div>

              <div class="form-group">
                <%= form.label :password %>
                <%= form.text_field :password, class:"form-control", placeholder:"Senha do Admin"  %>
              </div>

              <div class="form-group">
                <%= form.label :password_confirmation %>
                <%= form.text_field :password_confirmation, class:"form-control", placeholder:"Confirme a senha do Admin"  %>
              </div>

              <button type="submit" class="btn btn-success btn-icon-split">
                <span class="icon text-white-50">
                    <i class="fas fa-check"></i>
                </span>
                <span class="text">Salvar</span>
              </button>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>